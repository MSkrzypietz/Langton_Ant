<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controller">
   <children>
      <HBox alignment="CENTER" prefHeight="0.0" prefWidth="0.0" spacing="20.0" style="-fx-background-color: lightgrey;">
         <children>
            <Label fx:id="stepCounter" text="Steps: 0" />
            <Button fx:id="startButton" mnemonicParsing="false" text="Start" onAction="#startSimulation" />
            <Button fx:id="stopButton" disable="true" mnemonicParsing="false" text="Stop" onAction="#stopSimulation" />
            <Button fx:id="heatMapButton" disable="true" mnemonicParsing="false" text="HeatMap" onAction="#startHeatMapShow" />
            <ComboBox fx:id="modeComboBox" prefWidth="150.0" promptText="choose mode" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
      <GridPane fx:id="grid" gridLinesVisible="true" />
   </children>
</VBox>
